                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户相关接口(api分组展示使用的)"
                ],
                "summary": "用户注册接口",
                "parameters": [
                    {
                        "description": "用户注册参数",
                        "name": "ParamSignUp",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.ParamSignUp"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "成功响应",
